<odoo>
    <data>

        <record id="view_return_voucher_form" model="ir.ui.view">
            <field name="name">view.return.voucher.form</field>
            <field name="model">return.voucher</field>
            <field name="arch" type="xml">
                <form string="return voucher">
                    <sheet>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="sale_id" />
                                <field name="partner_id" />
                                <field name="customer_ref" />
                                <field name="sale_date" />
                            </group>

                            <group>
                                <field name="date"/>
                                <field name="delivery_number"/>
                                <field name="delivery_date"/>
                                <field name="reason_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_return_voucher_view" model="ir.actions.act_window">
            <field name="name">Return Voucher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">return.voucher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_return_voucher_view" name="Return Voucher" parent="menu_return_order"
                  action="action_return_voucher_view" sequence="3"/>
    </data>
</odoo>