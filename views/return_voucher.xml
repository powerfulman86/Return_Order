<odoo>
    <data>
        <record id="view_return_voucher_tree" model="ir.ui.view">
            <field name="name">view.return.voucher.tree</field>
            <field name="model">return.voucher</field>
            <field name="arch" type="xml">
                <tree string="Return Voucher">
                    <field name="name"/>
                    <field name="sale_id"/>
                    <field name="partner_id"/>
                    <field name="customer_ref"/>
                    <field name="sale_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_request_return_voucher_tree" model="ir.ui.view">
            <field name="name">view.return.voucher.tree</field>
            <field name="model">return.voucher</field>
            <field name="arch" type="xml">
                <tree string="Return Voucher">
                    <field name="name"/>
                    <field name="sale_id"/>
                    <field name="partner_id"/>
                    <field name="customer_ref"/>
                    <field name="sale_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_return_voucher_form" model="ir.ui.view">
            <field name="name">view.return.voucher.form</field>
            <field name="model">return.voucher</field>
            <field name="arch" type="xml">
                <form string="return voucher">
                    <header>
                        <button name="action_reviewed" states="draft" class="oe_highlight" type="object"
                                string="Reviewed"/>
                        <button name="action_approve" states="reviewed" class="oe_highlight" type="object"
                                groups="Return_Order.return_group_supervisor,Return_Order.return_group_manager"
                                string="return"/>
                        <button name="action_draft" type="object" string="reset to draft"
                                states="reviewed,approve"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="sale_id"/>
                                <field name="partner_id"/>
                                <field name="customer_ref"/>
                                <field name="sale_date"/>
                            </group>

                            <group>
                                <field name="date"/>
                                <field name="delivery_number"/>
                                <field name="delivery_date"/>
                                <field name="reason_id" options="{'no_create':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_request_return_voucher_form" model="ir.ui.view">
            <field name="name">view.return.voucher.form</field>
            <field name="model">return.voucher</field>
            <field name="arch" type="xml">
                <form string="Request Return vVoucher">
                    <header>
                        <button name="action_reviewed" states="draft" class="oe_highlight" type="object"
                                string="Reviewed"/>
                        <button name="action_approve" states="reviewed" class="oe_highlight" type="object"
                                groups="Return_Order.return_group_supervisor,Return_Order.return_group_manager"
                                string="return"/>
                        <button name="action_draft" type="object" string="reset to draft"
                                states="reviewed,approve"/>
                        <field name="state" widget="statusbar"/>
                    </header>

                    <sheet>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="sale_id"/>
                                <field name="partner_id"/>
                                <field name="customer_ref"/>
                                <field name="sale_date"/>
                            </group>

                            <group>
                                <field name="date"/>
                                <field name="delivery_number"/>
                                <field name="delivery_date"/>
                                <field name="reason_id" options="{'no_create':True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_return_voucher_view" model="ir.actions.act_window">
            <field name="name">Return Voucher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">return.voucher</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '!=', ['draft'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('Return_Order.view_return_voucher_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('Return_Order.view_return_voucher_form')}),
                ]"/>

        </record>
        <record id="action_request_return_voucher_view" model="ir.actions.act_window">
            <field name="name">Return Voucher</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">return.voucher</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', ['draft'])]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('Return_Order.view_request_return_voucher_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('Return_Order.view_request_return_voucher_form')}),
                ]"/>

        </record>

        <menuitem id="menu_request_return_voucher_view" name="Request for Return" parent="menu_return_order"
                  action="action_request_return_voucher_view" sequence="1"/>
        <menuitem id="menu_return_voucher_view" name="Return Order" parent="menu_return_order"
                  action="action_return_voucher_view" sequence="2"/>

    </data>
</odoo>